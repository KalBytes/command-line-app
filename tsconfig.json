{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules",  "**/*.spec.ts"]
}
